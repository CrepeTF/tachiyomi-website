/* purgecss start ignore */
.custom-block {
	padding-left: 1.25rem;
	padding-right: 1rem;
	border-radius: 0.125rem;
	overflow: hidden;
	position: relative;
	background-color: var(--color-ui-container);
	border: 1px solid var(--color-ui-border);
	border-radius: 6px;
	margin: 0.5rem 0;
	.c-title {
		margin: 1rem auto 0.5rem;
		font-weight: 600;
		&:empty {
			display: none;
		}
	}

	&.c-empty {
		padding-top: 1rem;
	}

	&.c- {

		&guide {
			background-color: var(--color-ui-container);

			.videolink {
				margin-top: -1rem;
			}
		}

		&details {
			background-color: transparent;
			border-left: none;
			border-right: none;
			border-radius: 0;
			margin: 0;

			&:not(:last-child) {
				border-bottom: none;
			}

			.c-title {
				margin: 1rem auto;
				font-weight: bold;
			}
		}

		&tip &warning &danger {
			padding-left: 3.75rem;
			&:before {
				content: "";
				display: block;
				position: absolute;
				top: 0;
				left: 0;
				margin-top: 1rem;
				margin-left: 1rem;
				width: 1.75rem;
				height: 1.75rem;
				background-size: contain;
			}
		}

		&tip {
			background-color: var(--color-ui-tip); // var(--color-ui-tip); // alpha($customTip, 2%);
			border: 1px solid var(--color-ui-tip-border); // alpha($customTip, 20%);
			padding-left: 3.75rem;

			&:before {
				content: "";
				display: block;
				position: absolute;
				top: 0;
				left: 0;
				margin-top: 1rem;
				margin-left: 1rem;
				width: 1.75rem;
				height: 1.75rem;
				background: transparent url("https://tachiyomi.org/assets/icon_tip.svg") no-repeat 0 0;
				background-size: contain;
			}

			a {
				color: var(--color-ui-tip-link) !important;
				&:hover {
					text-decoration: underline
				}
			}

			.c-title {
				color: var(--color-ui-tip-text); // darken($customTip, 60%);
			}
		}

		&warning {
			background-color: var(--color-ui-warning); //var(--color-ui-warning); // alpha($customWarning, 2%);
			border: 1px solid var(--color-ui-warning-border); // alpha($customWarning, 20%);
			padding-left: 3.75rem;

			&:before {
				content: "";
				display: block;
				position: absolute;
				top: 0;
				left: 0;
				margin-top: 1rem;
				margin-left: 1rem;
				width: 1.75rem;
				height: 1.75rem;
				background: transparent url("https://tachiyomi.org/assets/icon_warning.svg") no-repeat 0 0;
				background-size: contain;
			}

			a {
				color: var(--color-ui-warning-link) !important;
				&:hover {
					text-decoration: underline
				}
			}

			.c-title {
				color: var(--color-ui-warning-text);//darken(#b29400, 40%); // darken($customWarning, 40%);
			}
		}

		&danger {
			background-color: var(--color-ui-danger); // alpha($customDanger, 2%);
			border: 1px solid var(--color-ui-danger-border); // alpha($customDanger, 20%);
			padding-left: 3.75rem;

			&:before {
				content: "";
				display: block;
				position: absolute;
				top: 0;
				left: 0;
				margin-top: 1rem;
				margin-left: 1rem;
				width: 1.75rem;
				height: 1.75rem;
				background: transparent url("https://tachiyomi.org/assets/icon_danger.svg") no-repeat 0 0;
				background-size: contain;
			}

			a {
				color: var(--color-ui-danger-link) !important;
				&:hover {
					text-decoration: underline
				}
			}

			.c-title {
				color: var(--color-ui-danger-text); // darken($customDanger, 40%);
			}
		}
	}

	&.aside {
		background-color: transparent;
		border: none;
		color: transparentify(#2c3e50, 0.4); // transparentify($textColor, 0.4);
		font-size: 0.9rem;
		text-align: right;
	}

	&.aside-guide {
		background-color: transparent;
		border: none;
		font-size: 0.9rem;
		text-align: left;
		padding-left: unset;
		p {
			margin-top: 0;
		}
		a {
			color: #476582; // $accentColorSecondary;
		}
	}
}
/* purgecss end ignore */
