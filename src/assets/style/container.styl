// purgecss start ignore

.custom-block {
	padding-left 1.25rem
	padding-right 1rem
	border-radius 0.125rem
	overflow hidden
	position relative
	background-color var(--color-ui-container)
	border 1px solid var(--color-ui-border)
	border-radius 6px
	margin 0.5rem 0

	.c-title {
		margin 1rem auto 0.5rem
		font-weight 600

		&:empty {
			display none
		}
	}

	&.c- {

		&empty {
			padding-top 1rem
		}

		&guide {
			background-color var(--color-ui-container)

			.videolink {
				margin-top -1rem
			}
		}

		&details {
			background-color transparent
			border-left none
			border-right none
			border-radius 0
			margin 0

			&:not(:last-child) {
				border-bottom none
			}

			.c-title {
				margin 1rem auto
				font-weight bold
			}
		}

		&tip,
		&warning,
		&danger,
		&alert {
			padding-left 3.75rem

			&:before {
				content ""
				display block
				position absolute
				top 0
				left 0
				margin-top 1rem
				margin-left 1rem
				width 1.75rem
				height 1.75rem
				background-size contain
			}

			a {

				&:hover {
					text-decoration underline
				}
			}
		}


		&tip {
			background-color var(--color-ui-tip)
			border 1px solid var(--color-ui-tip-border)

			&:before {
				background transparent url("https://tachiyomi.org/assets/icon_tip.svg") no-repeat 0 0
			}

			a {
				color var(--color-ui-tip-link) !important
			}

			.c-title {
				color var(--color-ui-tip-text)
			}
		}

		&warning {
			background-color var(--color-ui-warning)
			border 1px solid var(--color-ui-warning-border)

			&:before {
				background transparent url("https://tachiyomi.org/assets/icon_warning.svg") no-repeat 0 0
			}

			a {
				color var(--color-ui-warning-link) !important
			}

			.c-title {
				color var(--color-ui-warning-text)
			}
		}

		&danger {
			background-color var(--color-ui-danger)
			border 1px solid var(--color-ui-danger-border)

			&:before {
				background transparent url("https://tachiyomi.org/assets/icon_danger.svg") no-repeat 0 0
			}

			a {
				color var(--color-ui-danger-link) !important
			}

			.c-title {
				color var(--color-ui-danger-text)
			}
		}

		&alert {
			background-color: var(--color-ui-alert-background)
			&:before {
				background transparent url("https://tachiyomi.org/assets/icon_tip.svg") no-repeat 0 0
			}
			.c-title {
				color var(--color-ui-alert-text)
			}
			p {
				color var(--color-ui-alert-paragraph)
			}
		}
	}

	&.aside {
		background-color transparent
		border none
		color transparentify(#2c3e50, 0.4)
		font-size 0.9rem
		text-align right
	}

	&.aside-guide {
		background-color transparent
		border none
		font-size 0.9rem
		text-align left
		padding-left unset

		p {
			margin-top 0
		}

		a {
			color #476582
		}
	}
}
// purgecss end ignore
